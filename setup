#!/bin/bash

# echo "if [ -f ~/myaliases/.bash_cpp ]; then
#	. ~/myaliases/.bash_cpp" | ed .bashaliases

# WRITE FUN
# given an argument, do a thing with that file.

FILES="./.bash_*"

# If there are no arguments, then include all.
if [ $# -gt 1 ]; then
	for $f in $FILES
	do
		# CALL FUN
	done
fi

echo "There are $# arguments."

# Iterate over arguments. 
for argn in $@
do
# Append .bash_ to each and print out contents..
	# CALL FUN
	cat "$(readlink -f "./.bash_${argn}")"
done 
